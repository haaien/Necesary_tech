<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="100dp"
        android:text="Button"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/supportViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/buttonFirst"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/buttonFirst"
        android:text="data："
        android:textSize="24sp" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/buttonFirst"
        android:layout_toRightOf="@id/supportViewText"
        android:text="0"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/imageNumberText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text=" IMAGE：１"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/maxScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/imageNumberText"
        android:text=" MAX：20"
        android:textSize="30sp" />
</RelativeLayout>